<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View definition for the tree view of the CBS Bank Account model -->
    <record id="cbs_bank_account_tree_view" model="ir.ui.view">
        <field name="name">cbs.bank.account.tree</field>
        <field name="model">cbs.bank.account</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Fields to be displayed in the tree view -->
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="product_type_id"/>
            </tree>
        </field>
    </record>

    <!-- View definition for the form view of the CBS Bank Account model -->
    <record id="cbs_bank_account_form_view" model="ir.ui.view">
        <field name="name">cbs.bank.account.form</field>
        <field name="model">cbs.bank.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="2">
                        <group>
                            <!-- Fields to be displayed in the left column of the form -->
                            <field name="id"/>
                            <field name="name" readonly="True"/>  
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <!-- Fields to be displayed in the right column of the form -->
                            <field name="product_type_id" domain="[('is_bank_account_genarate', '=', True)]" attrs="{'required': [('product_type_id','=', False)]}" />
                            <field name="product_id" attrs="{'invisible': [('product_type_id', '=', False)], 'required': [('product_id','=', False)]}" domain="[('product_type_id', '=', product_type_id)]"/>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action definition for the CBS Bank Account model -->
    <record id="cbs_bank_account_action" model="ir.actions.act_window">
        <field name="name">CBS Bank Account</field>
        <field name="res_model">cbs.bank.account</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
