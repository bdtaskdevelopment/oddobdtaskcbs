<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View definition for the tree view of the Teller Account model -->
    <record id="teller_account_tree_view" model="ir.ui.view">
        <field name="name">teller.acccount.tree</field>
        <field name="model">teller.account</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Fields to be displayed in the tree view -->
                <field name="branch_id"/>
                <field name="user_id"/>
                <field name="is_head_cashier"/>
                <field name="is_vault"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- View definition for the form view of the Teller Account model -->
    <record id="teller_account_form_view" model="ir.ui.view">
        <field name="name">teller.account.form</field>
        <field name="model">teller.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group col="2">
                            <!-- Fields to be displayed in the left column of the form -->
                            <field name="branch_id"/>
                            <field name="name"/>
                            <field name="link_account_id"/>
                            <field name="user_id"/>
                        </group>
                        <group col="2">
                            <!-- Fields to be displayed in the right column of the form -->
                            <field name="is_head_cashier"/>
                            <field name="is_vault"/>
                            <field name="is_active"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action definition for the Teller Account model -->
    <record id="teller_account_action" model="ir.actions.act_window">
        <field name="name">Teller Account</field>
        <field name="res_model">teller.account</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
